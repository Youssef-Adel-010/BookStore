@model CategoryFormViewModel

<form asp-action="@(Model?.Id > 0 ? "Edit" : "Create")" method="post" data-ajax="true" data-ajax-method="post" data-ajax-success="onModalSuccess" data-ajax-failure="onModalFailure">
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control" placeholder="Name" asp-for="Name" autocomplete="off" autofocus />
            <label asp-for="Name"></label>
        </div>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <partial name="_ModalFooter" />
</form>
